@{
    ViewData["Title"] = "Multiple Choice";
}

@model SurveyQuestionViewModel

<div>
<p>@Model.QuestionText</p>
<form method="post">
	@for (int i=0; i < Model.AnswersArray.Count; i++){
		<div style="display:block" class="form-check">
			<input class="form-check-input" type="radio" name="answer" id="@("answer" + i)" value="@Model.AnswersArray[i]">
			<label class="form-check-label" for="@("answer" + i)">
			@Model.AnswersArray[i]
			</label>
		</div>
	}
	
	<button class="btn btn-right btn-outline-primary" type="submit" value="@(int.Parse(Model.QIndex) + 1)" name="qIndex" id="submit-button">Next</button>
</form>


<form method="post">
	<button class="btn btn-left btn-outline-primary" type="submit" name="qIndex" value="@(int.Parse(Model.QIndex) - 1)" id="back-button">Back</button>
</form>
</div>